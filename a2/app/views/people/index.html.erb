<h1><%= link_to 'RectangleDB', "/" %></h1>

<div class="center-box">
	<table>
		<tr>
			<th>id</th>
			<th>Name</th>
			<th>Weight</th>
			<th>Height</th>
			<th>Color</th>
			<th>Stylishness</th>
			<th colspan="2"></th>
		</tr>

		<% @person.each do |person| %>
			<tr>
				<td><%= person.id %></td>
				<td><%= person.name %></td>
				<td><%= person.weight %></td>
				<td><%= person.height %></td>
				<td><%= person.color %></td>
				<td><%= person.stylishness %></td>
				<td><%= link_to 'Show', person_path(person) %></td>
				<td><%= link_to 'Edit', edit_person_path(person) %></td>
			</tr>
		<% end %>
	</table>

	<div class="btns">
		<%= link_to 'New', new_person_path %>
		<%= link_to 'Back', "/" %>
	</div>
</div>
